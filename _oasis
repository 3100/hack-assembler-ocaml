  Path: src
  Modules: Main
  BuildDepends:
    str

Executable "test_all"
  Path: test
  MainIs: test.ml
  Build$: flag(tests)
  CompiledObject: best
  Install: false
  BuildDepends: main, oUnit

Test "test_all"
  Run$: flag(tests)
  TestTools: test_all
  Command: $test_all
  WorkingDirectory: test
